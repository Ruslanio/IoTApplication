<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="Button">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/small_value</item>
    </style>

    <style name="Button.Flat">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Label">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Label.Secondary">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Label.Accent">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Label.Logo">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Label.Headline">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>
